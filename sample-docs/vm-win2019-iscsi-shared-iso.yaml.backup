apiVersion: kubevirt.io/v1
kind: VirtualMachine
metadata:
  name: fin-iscsi-vm01
  namespace: finance
  labels:
    app: fin-iscsi-vm01
    kubevirt.io/vm: fin-iscsi-vm01
spec:
  runStrategy: Halted
  dataVolumeTemplates:
    - metadata:
        name: fin-iscsi-vm01-rootdisk
        # annotations:
          # trident.netapp.io/volume-labels: '{"tenant":"finance","env":"prod","vm":"fin-iscsi-vm01","diskrole":"os","workload":"vm"}'
      spec:
        pvc:
          accessModes:
            - ReadWriteMany    # âœ… Changed to RWX
          volumeMode: Block
          resources:
            requests:
              storage: 64Gi
          storageClassName: comp-ontap-iscsi1-gold-class
        source:
          blank: {}
  template:
    metadata:
      labels:
        kubevirt.io/vm: fin-iscsi-vm01
    spec:
      nodeSelector:
        kubernetes.io/hostname: rhpoc-us02-wrkr02
      domain:
        cpu:
          cores: 4
          sockets: 1
          threads: 1
        devices:
          disks:
            - name: rootdisk
              disk:
                bus: virtio
              bootOrder: 1
            - name: installation-cdrom
              cdrom:
                bus: sata
              bootOrder: 2
            - name: windows-drivers-disk
              cdrom:
                bus: sata
          interfaces:
            - name: default
              masquerade: {}
              model: virtio
        firmware:
          bootloader:
            bios: {}
        machine:
          type: q35
        resources:
          requests:
            memory: 8Gi
      networks:
        - name: default
          pod: {}
      volumes:
        - name: rootdisk
          dataVolume:
            name: fin-iscsi-vm01-rootdisk
        - name: installation-cdrom
          persistentVolumeClaim:
            claimName: fin-win2019-iso-shared
        - name: windows-drivers-disk
          containerDisk:
            image: registry.redhat.io/container-native-virtualization/virtio-win